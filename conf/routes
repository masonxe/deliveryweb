# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                     controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file         controllers.Assets.at(path="/public", file)


POST    /user/crear           controllers.Application.crearUsuario(email: String, clave: String, nombres: String, apellidos: String)
POST    /user/login           controllers.Application.login(usuario: String, clave: String)
GET     /user/{id}            controllers.Application.getUsuario(id: Long)